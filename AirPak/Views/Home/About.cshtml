                    <!-- Animation Shape Start -->
                    <div class="shape shape-1 scene">
                        <span data-depth="1"><img src="/assets/images/shape-animation/video-shape-1.png" alt=""></span>
                    </div>
                    <!-- Animation Shape End -->
                </div>
            </div>
            <!-- About Image Area Start -->

        </div>
